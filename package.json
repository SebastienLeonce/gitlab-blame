{
  "name": "gitlab-blame",
  "displayName": "Git Blame MR/PR Link",
  "description": "Add Merge Request/Pull Request links to git blame hovers for GitLab and GitHub",
  "version": "1.3.0",
  "publisher": "sebastien-dev",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/SebastienLeonce/gitlab-blame"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "keywords": [
    "git",
    "blame",
    "gitlab",
    "github",
    "merge request",
    "pull request",
    "mr",
    "pr",
    "vcs",
    "hover",
    "scm",
    "link"
  ],
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "galleryBanner": {
    "color": "#2D2D2D",
    "theme": "dark"
  },
  "qna": "marketplace",
  "bugs": {
    "url": "https://github.com/SebastienLeonce/gitlab-blame/issues"
  },
  "homepage": "https://github.com/SebastienLeonce/gitlab-blame#readme",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitlabBlame.setToken",
        "title": "Git Blame: Set Personal Access Token"
      },
      {
        "command": "gitlabBlame.deleteToken",
        "title": "Git Blame: Delete Personal Access Token"
      },
      {
        "command": "gitlabBlame.clearCache",
        "title": "Git Blame: Clear Cache"
      },
      {
        "command": "gitlabBlame.showStatus",
        "title": "Git Blame: Show Status"
      },
      {
        "command": "gitlabBlame.toggleDisplayMode",
        "title": "Git Blame: Toggle Display Mode"
      }
    ],
    "configuration": {
      "title": "Git Blame",
      "properties": {
        "gitlabBlame.gitlabUrl": {
          "type": "string",
          "default": "https://gitlab.com",
          "description": "GitLab instance URL (e.g., https://gitlab.enterprise.net)"
        },
        "gitlabBlame.githubUrl": {
          "type": "string",
          "default": "https://github.com",
          "description": "GitHub instance URL (for GitHub Enterprise Server, e.g., https://github.enterprise.com)"
        },
        "gitlabBlame.cacheTTL": {
          "type": "number",
          "default": 3600,
          "description": "Cache TTL in seconds (0 to disable)"
        },
        "gitlabBlame.displayMode": {
          "type": "string",
          "enum": [
            "hover",
            "inline",
            "both"
          ],
          "enumDescriptions": [
            "Show MR/PR links only on hover",
            "Show MR/PR links inline (end-of-line decorations)",
            "Show both inline annotations and hover tooltips"
          ],
          "default": "inline",
          "description": "How to display Merge Request/Pull Request information"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify --sourcemap",
    "build:dev": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "test": "node ./out/test/runTest.js",
    "test:unit": "npm test",
    "test:coverage": "c8 npm test",
    "test:watch": "npm test -- --watch",
    "test:e2e": "node ./out/test/runE2ETest.js",
    "pretest": "tsc -p ./tsconfig.test.json",
    "pretest:e2e": "npm run build:dev && tsc -p ./tsconfig.test.json && cp -r test/suite/e2e/fixtures out/test/suite/e2e/",
    "fixture:clean": "rm -rf test/suite/e2e/fixtures/test-repo/.git",
    "fixture:rebuild": "npm run fixture:clean && npm run pretest:e2e",
    "fixture:verify": "npm run pretest && mocha --ui tdd out/test/suite/e2e/fixtures/validate.test.js",
    "validate": "npm run lint && npm run typecheck && npm run test:coverage && npm run build",
    "pre-commit": "npm run lint && npm run typecheck",
    "pre-push": "npm run test:coverage && npm run build",
    "version:patch": "npm version patch -m \"chore(release): bump to v%s\"",
    "version:minor": "npm version minor -m \"chore(release): bump to v%s\"",
    "version:major": "npm version major -m \"chore(release): bump to v%s\"",
    "package": "vsce package",
    "publish": "vsce publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/sinon": "^17.0.2",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "c8": "^10.1.3",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "glob": "^10.3.10",
    "husky": "^9.1.7",
    "mocha": "^10.2.0",
    "nock": "^14.0.10",
    "sinon": "^17.0.1",
    "typescript": "^5.3.2"
  },
  "c8": {
    "include": [
      "out/src/**/*.js"
    ],
    "exclude": [
      "out/test/**",
      ".vscode-test/**",
      "**/*.d.ts",
      "out/src/extension.js",
      "out/src/types/**",
      "out/src/interfaces/**",
      "out/src/**/index.js"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html",
      "lcov"
    ],
    "all": true,
    "check-coverage": true,
    "lines": 90,
    "functions": 90,
    "branches": 85,
    "statements": 90,
    "report-dir": "./coverage",
    "sourceMap": true,
    "skipFull": false
  }
}
