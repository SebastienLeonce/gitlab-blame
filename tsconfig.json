{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "outDir": "out",
    "baseUrl": ".",
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@constants": ["src/constants"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@interfaces": ["src/interfaces"],
      "@interfaces/*": ["src/interfaces/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@providers": ["src/providers"],
      "@providers/*": ["src/providers/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@test-helpers": ["test/suite/e2e/helpers"],
      "@test-helpers/*": ["test/suite/e2e/helpers/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "out", "**/*.test.ts"]
}
